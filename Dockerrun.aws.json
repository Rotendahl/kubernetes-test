{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "rotendahl/client",
      "hostname": "client",
      "essential": false,
      "memory": 500
    },
    {
      "name": "api",
      "memory": 500,
      "image": "rotendahl/api",
      "hostname": "api",
      "essential": false,
      "links": ["client", "redis", "postgres"],
      "environment": [
        { "name": "REDIS_HOST", "value": "redis" },
        { "name": "REDIS_PORT", "value": "6379" },
        { "name": "PGUSER", "value": "postgres" },
        { "name": "PGHOST", "value": "postgres" },
        { "name": "PGDATABASE", "value": "postgres" },
        { "name": "PGPASSWORD", "value": "postgres_password" },
        { "name": "PGPORT", "value": "5432" }
      ],
      "dependsOn": [
        {
          "containerName": "postgres",
          "condition": "START"
        },
        {
          "containerName": "redis",
          "condition": "START"
        }
      ]
    },
    {
      "name": "nginx",
      "memory": 500,
      "image": "rotendahl/fib-nginx",
      "essential": true,
      "portMappings": [{ "hostPort": 80, "containerPort": "80" }],
      "links": ["client", "api"],
      "dependsOn": [
        {
          "containerName": "client",
          "condition": "START"
        },
        {
          "containerName": "api",
          "condition": "START"
        }
      ]
    },
    {
      "name": "worker",
      "image": "rotendahl/worker",
      "essential": false,
      "memory": 500,
      "links": ["redis", "postgres"],
      "environment": [
        { "name": "REDIS_HOST", "value": "redis" },
        { "name": "REDIS_PORT", "value": "6379" }
      ],
      "dependsOn": [
        {
          "containerName": "postgres",
          "condition": "START"
        },
        {
          "containerName": "redis",
          "condition": "START"
        }
      ]
    },
    {
      "name": "postgres",
      "image": "postgres:latest",
      "memory": 500,
      "environment": [
        { "name": "POSTGRES_PASSWORD", "value": "postgres_password" }
      ]
    },
    {
      "name": "redis",
      "image": "redis",
      "memory": 500
    }
  ]
}
